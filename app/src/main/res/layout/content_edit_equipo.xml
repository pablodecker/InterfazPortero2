<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditEquipo"
    tools:showIn="@layout/activity_edit_equipo"
    android:orientation="vertical">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="6"
        android:paddingTop="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Nombre"
                android:id="@+id/textView6"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_column="0"
                android:layout_row="0" />/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextNombreEquipo"
                android:hint="Nombre del Equipo"
                android:layout_column="1"
                android:layout_row="0"
                android:gravity="left" />/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tipo"
            android:id="@+id/textView8"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_column="0"
            android:layout_row="1" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spTipoEquipo"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="left"
            android:layout_gravity="left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tel"
                android:id="@+id/textView7"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_column="0"
                android:layout_row="2" />

            <EditText
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextNumTelEquipo"
                android:gravity="left"
                android:hint="0000000000"
                android:layout_column="1"
                android:layout_row="2" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageButtonSeleccionarContacto"
                android:src="@drawable/ic_action_account_box"
                android:onClick="buscar_contacto"
                android:layout_gravity="right"
                android:layout_column="2"
                android:layout_row="2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Salida 1"
                android:id="@+id/textView9"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_column="0"
                android:layout_row="3" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextSal1"
                android:gravity="left"
                android:hint="Nombre Salida 1"
                android:layout_column="1"
                android:layout_row="3" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Salida 2"
                android:id="@+id/textView10"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_column="0"
                android:layout_row="4" />

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextSal2"
                android:hint="Nombre Salida 2"
                android:layout_column="1"
                android:layout_row="4"
                android:gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Salida 3"
                android:id="@+id/textView11"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_column="0"
                android:layout_row="5" />

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextSal3"
                android:gravity="left"
                android:hint="Nombre Salida 3"
                android:layout_column="1"
                android:layout_row="5" />
    </GridLayout>
</LinearLayout>
</ScrollView>
