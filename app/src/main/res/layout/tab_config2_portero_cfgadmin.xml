<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="match_parent">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="6"
            android:columnCount="6"
            android:id="@+id/gridTelefonos"
            android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Num"
                    android:id="@+id/textViewne"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Hab"
                    android:id="@+id/textViewHabEnt"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Tipo"
                    android:id="@+id/textViewTipoEn"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Llamar"
                    android:id="@+id/textViewLlamar"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="SMS"
                    android:id="@+id/textViewEnviarSMS"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Texto SMS"
                    android:id="@+id/textViewTxt"
                    android:layout_row="0"
                    android:layout_column="5"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="En1"
                    android:id="@+id/textView1"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/checkBoxHabEnt1"
                    android:layout_row="1"
                    android:layout_column="1"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_tipo_en1"
                    android:layout_row="1"
                    android:layout_column="2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/checkBoxLlamar1"
                    android:layout_row="1"
                    android:layout_column="3"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/checkBoxSMS1"
                    android:layout_row="1"
                    android:layout_column="4"/>
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/etTxtSMS1"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="En2"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="2"
                    android:layout_column="0" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/checkBoxHabEnt2"
                    android:layout_row="2"
                    android:layout_column="1"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_tipo_en2"
                    android:layout_row="2"
                    android:layout_column="2" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/checkBoxLlamar2"
                    android:layout_row="2"
                    android:layout_column="3"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/checkBoxSMS2"
                    android:layout_row="2"
                    android:layout_column="4"/>

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/etTxtSMS2"
                    android:gravity="center"
                    android:layout_row="2"
                    android:layout_column="5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="En3"
                    android:id="@+id/textView3"
                    android:layout_row="3"
                    android:layout_column="0" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/checkBoxHabEnt3"
                    android:layout_row="3"
                    android:layout_column="1"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_tipo_en3"
                    android:layout_row="3"
                    android:layout_column="2" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/checkBoxLlamar3"
                    android:layout_row="3"
                    android:layout_column="3"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/checkBoxSMS3"
                    android:layout_row="3"
                    android:layout_column="4"/>

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/etTxtSMS3"
                    android:gravity="center"
                    android:layout_row="3"
                    android:layout_column="5" />


        </GridLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Config\r\n de Audio"
                    android:id="@+id/textViewSecalarma"
                    android:gravity="center"
                    android:layout_marginRight="8dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Vol\r\nFrente"
                    android:id="@+id/textViewVol"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/spinner_vol_frente" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="4dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Mic\r\nFrente"
                    android:id="@+id/textViewVol2" />
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/spinner_mic_frente" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Vol\r\nTel"
                    android:id="@+id/textViewVol3" />
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/spinner_vol_telefono"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                        <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Mic\r\nTel"
                    android:id="@+id/textViewVol4" />
                        <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                    android:id="@+id/spinner_mic_telefono" />
                </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/configurar"
            android:id="@+id/buttonConfigurarConfig2"
            android:layout_gravity="center_horizontal" />

</LinearLayout>
    </ScrollView>