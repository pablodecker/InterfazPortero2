<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ToggleButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/salida1"
            android:id="@+id/toggleButtonSalida1"
            android:layout_gravity="center_horizontal"
            android:checked="false" />

        <ToggleButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/salida_2"
            android:id="@+id/toggleButtonSalida2"
            android:layout_gravity="center_horizontal"
            android:checked="false" />

        <ToggleButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Salida3"
            android:id="@+id/toggleButtonSalida3"
            android:layout_gravity="center_horizontal"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textViewPruebaSalidas"
            android:layout_gravity="center_horizontal" />
</LinearLayout>