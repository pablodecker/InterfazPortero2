<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.decker.pablo.interfazportero2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DatosEquipo"
            android:label="@string/title_activity_datos_equipo"
            android:theme="@style/AppTheme.NoActionBar">
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ConfigBasica"
            android:label="@string/title_activity_config_basica"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EquipoParticular"
            android:label="@string/title_activity_equipo_particular"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
